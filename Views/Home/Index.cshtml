@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
    }

    header {
        background-color: salmon;
        color: white;
        text-align: center;
        padding: 50px 0;
    }

    section {
        padding: 20px;
    }

    h2 {
        color: #333;
    }

    p {
        color: #666;
    }

    .services {
        display: flex;
        justify-content: space-around;
        flex-wrap: wrap;
    }

    .services-item {
        text-align: center;
        width: 30%;
        margin: 10px;
        padding: 20px;
        background-color: white;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .projects {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
    }

    .project-item {
        text-align: center;
        width: 45%;
        margin: 10px;
        padding: 20px;
        background-color: white;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    footer {
        background-color: #333;
        color: white;
        text-align: center;
        padding: 20px 0;
    }
</style>

<body>
    <header>
        <h1>pic will be added here</h1>

    </header>

    <section id="about">
        <h2>About Us</h2>
        <p>Welcome to Happy Paws! We are dedicated to promoting the well-being of pets and fostering a community of pet enthusiasts. Let's celebrate our love for animals together!</p>
    </section>

    <section id="services">
        <h2>Our Services</h2>
        <div class="services">
            <div class="services-item">
                <h3>Dog Training</h3>
                <p>Certified Professional</p>
            </div>
            <div class="skill-item">
                <h3>Cat Care</h3>
                <p>Experienced Caregiver</p>
            </div>
            <div class="skill-item">
                <h3>Small Pets</h3>
                <p>Rabbits, Hamsters, and more</p>
            </div>
        </div>
    </section>

    <section id="projects">
        <h2>Featured Pets</h2>
        <div class="projects">
            <div class="project-item">
                <h3>Adopt a Dog</h3>
                <p>Explore our wonderful dogs looking for loving homes. Find your perfect furry companion today!</p>
            </div>
            <div class="project-item">
                <h3>Rescue Cats</h3>
                <p>Meet our adorable rescued cats who are ready to bring joy to your home. Adopt a feline friend!</p>
            </div>

        </div>
    </section>

    <section id="contact">
        <h2>Contact</h2>
        <p>Email: happypaws@email.com</p>
        <p>Join us on <a href="#">Instagram</a> and <a href="#">Facebook</a> for daily pet updates!</p>
    </section>

    <footer>
        <p></p>
    </footer>

</body>

